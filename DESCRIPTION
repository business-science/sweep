    broom (>= 0.5.6),
    dplyr (>= 1.0.0),
    forecast (>= 8.0),
    lubridate (>= 1.6.0),
    tibble (>= 1.2),
    tidyr (>= 1.0.0),
    timetk (>= 2.1.0),
    rlang,
    tidyverse, 
    tidyquant
