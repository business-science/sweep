    broom (>= 0.4.2),
    devtools (>= 1.12.0),
    dplyr (>= 0.7.0),
    forecast (>= 8.0),
    lazyeval (>= 0.2.0),
    lubridate (>= 1.6.0),
    tibble (>= 1.2),
    tidyr (>= 0.6.1),
    timekit (>= 0.3.0)
